{
  "index": "products",
  "body": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "text", "analyzer": "standard" },
        "description": { "type": "text", "analyzer": "standard" },
        "category": { "type": "keyword" },
        "price": { "type": "float" },
        "createdAt": { "type": "date" }
      }
    }
  }
}
